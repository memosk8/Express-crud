<div class="col-md-4 ">
  <div class="card d-block">
    <div class="card-header text-center ">
      <h3 class="border border-light">Editar Categoría</h3>
    </div>
    <div class="card-body p-3">
      <form action="/music/edit-category/{{category._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="put">
        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text text-white bg-dark font-weight-bold" id="basic-addon1">Título</span>
            </div>
            <input type="text" class="form-control border-primary" name="title" value="{{category.title}}">
          </div>
          {{#each category.content}}
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">{{@index}}</span>
            </div>
            <input type="text" class="form-control border-primary" value="{{this}}" name="category{{@index}}">
          </div>
          {{/each}}

        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div