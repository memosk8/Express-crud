<div class="row">

   <div class="container">
      {{#each categories}}
      <div class="card mb-3 rounded z-depth-1">
         <div class="card-body ">
            <h4 class="card-title d-flex justify-content-between aling-items-center">
               {{ title }}
               <form action="/music/delete/{{_id}}?_method=DELETE" method="POST" class="container text-right mr-3">
                  <input type="hidden" name="_method" value="delete">
                  <button class="btn btn-danger btn-md font-weight-bold mr-3">Eliminar</button>
               </form>
               <a href="music/edit/{{_id}}"><i class="fas fa-edit mr-3"></i></a>
            </h4>
            <ul>
               {{#each content}}
               <li class="list-group-item py-1 border  border-light">{{this}}</li>
               {{/each}}
            </ul>

         </div>
      </div>

      {{else}}
      {{!-- admin option --}}
      <div class="card mx-auto">
         <div class="card-body text-center">
            <p class="lead ">No hay categor√≠as </p>
            <a href="/music/add" class="btn btn-success font-weight-bold">Crear nueva categoria &nbsp;<i
                  class="fas fa-plus text-dark"></i></a>
         </div>
      </div>
      {{/each}}
   </div>

</div>